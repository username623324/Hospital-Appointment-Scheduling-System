<Window x:Class="Hospital_Appointment_Scheduling_System.Views.AddMedicalHistoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Hospital_Appointment_Scheduling_System.Views"
        mc:Ignorable="d"
        Name="addmedicalhistorywindow"
        Title="AddMedicalHistoryWindow" Height="150" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>

        <Label Content="Add Medical Shit"/>
        <TextBox Grid.Row="1"
                 Height="50"
                 Text="{Binding MedicalInfo}"/>
        <Button Grid.Row="2"
                Content="Add"
                Width="40"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                CommandParameter="{x:Reference Name=addmedicalhistorywindow}"
                Command="{Binding AddMedicalInfoCommand}"/>


    </Grid>
</Window>
